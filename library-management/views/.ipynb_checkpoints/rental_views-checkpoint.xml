<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="rental_view_form">
            <field name="name">academy.rental.form</field>
            <field name="model">academy.rental</field>
            <field name="arch" type="xml">
                <form string="Rental Form">
                    <sheet>
                        <h1><field name="rental_code"/></h1>
                        <group>
                            <group>
                                <field name="customer_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Books Rented">
                                <field name="books_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="rental_view_list">
            <field name="name">academy.rental.list</field>
            <field name="model">academy.rental</field>
            <field name="arch" type="xml">
                <tree string="Rental List">
                    <field name="rental_code"/>
                    <field name="customer_id"/>
                </tree>
            </field>
        
        </record>
        
        
         
        <record model="ir.ui.view" id="rental_view_map">
            <field name="name">academy.rental.map</field>
            <field name="model">academy.rental</field>
            <field name="arch" type="xml">
                <map res_partner="customer_id">
                    <field name="customer_id" string="Customer Name"/>
                </map>
            </field>
        </record>
        
    </data>
</odoo>