<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="task_view_form">
            <field name="name">academy.task.form</field>
            <field name="model">academy.task</field>
            <field name="arch" type="xml">
                <form string="Course Form">
                    <sheet>
                        <group>
                            <group>
                                <field name="start_time"/>
                            </group>
                            <group>
                                <field name="stop_time"/>
                            </group>
                        </group>
                        
                        <group>
                            <group>
                                <field name="task_name"/>
                                <field name="description"/>
                                <field name="task_type"/>
                                <field name="repeatable"/>
                            </group>
                            <group>
                                <field name="leader_name"/>
                                <field name="task_state"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Volunteers">
                                <field name="task_volunteers"/>
                            </page>
                        </notebook>
                        
                    </sheet>
                </form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="task_view_list">
            <field name="name">academy.task.list</field>
            <field name="model">academy.task</field>
            <field name="arch" type="xml">
                <tree string="Task List">
                    <field name="task_name"/>
                    <field name="task_type"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="task_view_search">
            <field name="name">academy.task.search</field>
            <field name="model">academy.task</field>
            <field name="arch" type="xml">
                <search>
                    <field name="task_name"/>
                    <field name="description"/>
                </search>
            </field>
        </record>
        
        
    </data>
    
</odoo>