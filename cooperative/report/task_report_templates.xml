<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <report
            id="report_task"
            model="academy.task"
            string="Task Report"
            name="cooperative.report_task_document"
            file="cooperative.report_task"
            report_type="qweb-html"/>
    
    <template id="report_task_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 t-field="doc.task_name" class="mt16"/>
                        <div class="row mt32 mb32" id="spaceship_info">
                            <div class="col-auto mw-100 mb-2">
                                <strong>Task Information</strong>
                                <t t-if="doc.description">
                                    <span t-field="doc.description"/>
                                </t>
                                <t t-if="doc.task_type">
                                    <span t-field="doc.task_type"/>
                                </t>
                                <t t-if="doc.task_state">
                                    <span t-field="doc.task_state"/>
                                </t>
                            </div>
                            
                            <div t-if="doc.start_time" class="col-auto mw-100 mb-2">
                                <span t-field="doc.start_time"/>
                            </div>
                            <div t-if="doc.stop_time" class="col-auto mw-100 mb-2">
                                <span t-field="doc.stop_time"/>
                            </div>
                            <div t-if="doc.leader_name" class="col-auto mw-100 mb-2">
                                <span t-field="doc.leader_name"/>
                            </div>
                            
                        </div>
                        <h4>Volunteers</h4>
                        <table class="table table-sm o_main_table">
                            <thead>
                                <tr>
                                    <th name="th_name">Name</th>
                                    <th name="th_launch">Phone</th>
                                    <th name="th_return">Email</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.task_volunteers" t-as="volunteer">
                                    <tr>
                                        <td t-if="volunteer.name" name="td_volunteer_name">
                                            <span t-field="volunteer.name"/>
                                        </td>
                                        <td t-if="volunteer.phone" name="td_volunteer_phone">
                                            <span t-field="volunteer.phone"/>
                                        </td>
                                        <td t-if="volunteer.email" name="td_volunteer_email">
                                            <span t-field="volunteer.email"/>
                                        </td>
                                        
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        
                        
                    </div>
                </t>
            </t>
        </t>
    </template>
    
</odoo>