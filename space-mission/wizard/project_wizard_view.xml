<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="academy_project_wizard_form_view">
            <field name="name">academy.project.wizard.form</field>
            <field name="model">academy.project.wizard</field>
            <field name="arch" type="xml">
                <form string="Create Project for Mission">
                    <group>
                        <field name="mission_id"/>
                    </group>
                    <footer>
                        <button name="create_project" type="object"
                                string="Create" class="oe_highlight"/>
                        or
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        
        </record>
        
        <act_window id="launch_sale_wizard"
                    name="Create Project"
                    binding_model="academy.mission"
                    res_model="academy.project.wizard"
                    view_mode="form"
                    target="new"/>
        
    </data>
</odoo>