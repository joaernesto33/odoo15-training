<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="mission_view_form">
            <field name="name">academy.mission.form</field>
            <field name="model">academy.mission</field>
            <field name="arch" type="xml">
                <form string="Mission Form">
                    <sheet>
                        <h1><field name="mission_name"/></h1>
                        <group>
                            <group>
                                <field name="launch_date"/>
                                <field name="return_date"/>
                            </group>
                            <group>
                                <field name="spaceship_id"/>
                            </group>
                            
                            <notebook>
                                <page string="Crew">
                                    <field name="crew_members"/>
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="mission_view_list">
            <field name="name">academy.mission.list</field>
            <field name="model">academy.mission</field>
            <field name="arch" type="xml">
                <tree string="Mission List">
                    <field name="mission_name"/>
                    <field name="launch_date"/>
                    <field name="spaceship_id"/>
                </tree>
            </field>
        
        </record>
    </data>
</odoo>