<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.actions.act_window" id="spaceship_list_action">
            <field name="name">Spaceships</field>
            <field name="res_model">academy.spaceship</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smilling_face">
                    Create the first spaceship
                </p>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="mission_list_action">
            <field name="name">Missions</field>
            <field name="res_model">academy.mission</field>
            <field name="view_mode">tree,form,graph</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smilling_face">
                    Create the first mission
                </p>
            </field>
        </record>
        
        <menuitem name="Space Mission" id="menu_space" sequence="1" />
        
        <menuitem name="Space Mission" id="menu_space_sub" parent="menu_space" sequence="2"/>
        
        <menuitem name="Spaceship" id="menu_space_spaceships" parent="menu_space_sub" sequence="3" action="spaceship_list_action"/>
        
        <menuitem name="Mission" id="menu_space_mission" parent="menu_space_sub" sequence="4" action="mission_list_action"/>
        
    </data>
</odoo>